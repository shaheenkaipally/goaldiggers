<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<!--form for editing data-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Match</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Match"
                    name="match" 
                    value="<%= match.match %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Teams</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the teams"
                    name="teams" 
                    value="<%= match.teams %>"
                    required>
                </div>
                
                
                <div class="form-group">
                    <label for="nameTextField">Game</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the game"
                    name="game" 
                    value="<%= match.game %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Time</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the time"
                    name="time" 
                    value="<%= match.time %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Price</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the price"
                    name="price" 
                    value="<%= match.price %>"
                    required>
                </div>
                
                

                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/match-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


